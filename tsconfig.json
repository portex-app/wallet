{
  "compilerOptions": {
    /* 项目配置 */
    "incremental": true,                                    /* 启用增量编译，提高编译速度 */
    "composite": true,                                      /* 启用项目引用，支持大型项目拆分 */
    "tsBuildInfoFile": "./dist/.tsbuildinfo",               /* 指定增量编译信息文件位置 */
    // "disableSourceOfProjectReferenceRedirect": true,     /* 禁用项目引用重定向 */
    // "disableSolutionSearching": true,                    /* 禁用多项目引用检查 */
    // "disableReferencedProjectLoad": true,                /* 减少自动加载的项目数量 */

    /* 语言和环境 */
    "target": "es2015",                                     /* 设置编译后的 JavaScript 版本 */
    "lib": ["es2015", "dom"],                               /* 需要包含的库文件 */
    // "jsx": "preserve",                                   /* 保留 JSX 语法 */
    // "libReplacement": true,                              /* 启用库替换 */
    // "experimentalDecorators": true,                      /* 启用实验性装饰器 */
    // "emitDecoratorMetadata": true,                       /* 为装饰器生成元数据 */
    // "jsxFactory": "",                                    /* 指定 JSX 工厂函数 */
    // "jsxFragmentFactory": "",                            /* 指定 JSX Fragment 引用 */
    // "jsxImportSource": "",                               /* 指定 JSX 工厂函数的模块说明符 */
    // "reactNamespace": "",                                /* 指定 createElement 的调用对象 */
    // "noLib": true,                                       /* 禁用包含任何库文件 */
    // "useDefineForClassFields": true,                     /* 使用 ECMAScript 标准类字段 */
    // "moduleDetection": "auto",                           /* 控制模块格式检测方法 */

    /* 模块 */
    "module": "esnext",                                     /* 模块系统 */
    "rootDir": "./src",                                     /* 指定源码根目录 */
    "moduleResolution": "bundler",                          /* 模块解析策略 */
    "baseUrl": ".",                                         /* 基础路径 */
    "paths": {
      "*": ["*"]
    },
    // "rootDirs": [],                                      /* 允许多个文件夹被视为一个 */
    // "typeRoots": [],                                     /* 指定类型声明文件目录 */
    // "types": [],                                         /* 指定要包含的类型包 */
    // "allowUmdGlobalAccess": true,                        /* 允许从模块访问 UMD 全局变量 */
    // "moduleSuffixes": [],                                /* 模块解析时的文件后缀列表 */
    // "allowImportingTsExtensions": true,                  /* 允许导入 TypeScript 文件扩展名 */
    // "rewriteRelativeImportExtensions": true,             /* 重写相对导入路径的扩展名 */
    "resolvePackageJsonExports": true,                      /* 使用 package.json 的 exports 字段 */
    "resolvePackageJsonImports": true,                      /* 使用 package.json 的 imports 字段 */
    // "customConditions": [],                              /* 解析导入时的附加条件 */
    // "noUncheckedSideEffectImports": true,                /* 检查副作用导入 */
    "resolveJsonModule": true,                              /* 允许导入 JSON 文件 */
    // "allowArbitraryExtensions": true,                    /* 允许导入任意扩展名的文件 */
    // "noResolve": true,                                   /* 禁止扩展导入的文件数量 */

    /* JavaScript 支持 */
    "allowJs": true,                                        /* 允许编译 JavaScript 文件 */
    "checkJs": true,                                        /* 检查 JavaScript 文件中的类型错误 */
    // "maxNodeModuleJsDepth": 1,                           /* 指定检查 node_modules 中 JS 文件的最大深度 */

    /* 输出 */
    "declaration": true,                                    /* 生成声明文件 */
    "declarationDir": "./dist",                             /* 指定声明文件输出目录 */
    "outDir": "./dist",                                     /* 指定编译输出目录 */
    "declarationMap": true,                                 /* 为声明文件生成源码映射 */
    // "emitDeclarationOnly": true,                         /* 仅输出声明文件 */
    "sourceMap": true,                                      /* 生成源码映射文件 */
    "inlineSourceMap": false,                               /* 不生成内联源码映射 */
    // "noEmit": true,                                      /* 禁用输出文件 */
    // "outFile": "./",                                     /* 指定输出文件 */
    "removeComments": false,                                /* 保留注释，提高代码可读性 */
    // "importHelpers": true,                               /* 从 tslib 导入辅助函数 */
    // "downlevelIteration": true,                          /* 降级迭代器实现 */
    // "sourceRoot": "",                                    /* 指定源码根路径 */
    // "mapRoot": "",                                       /* 指定源码映射文件位置 */
    "inlineSources": true,                                  /* 将源码文件内容包含在源码映射中 */
    // "emitBOM": true,                                     /* 在输出文件开头添加 BOM */
    // "newLine": "crlf",                                   /* 设置换行符 */
    // "stripInternal": true,                               /* 移除带有 @internal 的声明 */
    // "noEmitHelpers": true,                               /* 禁用生成辅助函数 */
    // "noEmitOnError": true,                               /* 有错误时不输出文件 */
    "preserveConstEnums": true,                             /* 保留 const enum 声明 */

    /* 互操作性约束 */
    "isolatedModules": true,                                /* 确保每个文件都可以安全地转译 */
    "verbatimModuleSyntax": true,                           /* 使用严格的模块语法 */
    // "isolatedDeclarations": true,                        /* 要求导出有足够的类型注解 */
    // "erasableSyntaxOnly": true,                          /* 不允许非 ECMAScript 的运行时构造 */
    "allowSyntheticDefaultImports": true,                   /* 允许从无默认导出的模块中默认导入 */
    "esModuleInterop": true,                                /* 启用 ES 模块互操作性 */
    // "preserveSymlinks": true,                            /* 禁用解析符号链接 */
    "forceConsistentCasingInFileNames": true,               /* 强制文件名大小写一致 */

    /* 类型检查 */
    "strict": true,                                         /* 启用所有严格类型检查选项 */
    "noImplicitAny": true,                                  /* 禁止隐式的 any 类型 */
    "strictNullChecks": true,                               /* 启用严格的 null 检查 */
    "strictFunctionTypes": true,                            /* 启用严格的函数类型检查 */
    "strictBindCallApply": true,                            /* 启用严格的 bind/call/apply 检查 */
    "strictPropertyInitialization": true,                   /* 启用严格的类属性初始化检查 */
    // "strictBuiltinIteratorReturn": true,                 /* 内置迭代器使用 undefined 作为返回类型 */
    "noImplicitThis": true,                                 /* 禁止 this 的隐式 any 类型 */
    // "useUnknownInCatchVariables": true,                  /* 将 catch 子句变量默认为 unknown */
    "alwaysStrict": true,                                   /* 以严格模式解析并生成 "use strict" */
    "noUnusedLocals": true,                                 /* 报告未使用的局部变量 */
    "noUnusedParameters": true,                             /* 报告未使用的参数 */
    "noImplicitReturns": true,                              /* 报告函数中未显式返回的代码路径 */
    "noFallthroughCasesInSwitch": true,                     /* 报告 switch 语句中的贯穿情况 */
    "noUncheckedIndexedAccess": true,                       /* 在索引签名中启用更严格的类型检查 */
    "noImplicitOverride": true,                             /* 确保派生类中的重写成员被标记为 override */
    // "noPropertyAccessFromIndexSignature": true,          /* 强制使用索引访问器 */
    // "allowUnusedLabels": true,                           /* 允许未使用的标签 */
    // "allowUnreachableCode": true,                        /* 允许不可达代码 */

    /* 完整性 */
    // "skipDefaultLibCheck": true,                         /* 跳过默认库的类型检查 */
    "skipLibCheck": true                                    /* 跳过声明文件的类型检查 */
  },
  "include": ["src/**/*"],                                  /* 包含的文件 */
  "exclude": ["node_modules", "dist", "test"]               /* 排除的文件 */
}
